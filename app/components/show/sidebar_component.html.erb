    <div class="record-sections col-lg-4">
      <%= render AccessComponent.new(version:) %>
      <%= render CitationComponent.new(version:) %>
      <%= render CollectionComponent.new(version:) %>
      <%= render CollectionItemsComponent.new(version:) if released_to_searchworks? %>
      <%= render VersionsComponent.new(purl: purl, version:) %>
      <%= render "purl/mods_contact", mods: %>
      <%= render FindItComponent.new(document: purl, version:) %>

      <% if metrics? %>
        <turbo-frame id="metrics-frame" src="<%= purl_metrics_path purl %>">
          <p>Loading usage metrics...</p>
        </turbo-frame>
      <% end %>
    </div>
