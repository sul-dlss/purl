<% label_id = "section-subjects" %>
<%= render SectionComponent.new(label: 'Subjects', label_id:) do %>
  <%= render TableComponent.new(label_id:) do %>
    <tbody>
      <% document.mods.subject.each do |field| %>
        <%= render RowFieldComponent.new(field:, value_transformer: ->(subject_line) { safe_join(helpers.link_mods_subjects(subject_line), ' > ') }) %>
      <% end %>
    </tbody>
    <tbody>
      <% document.mods.genre.each do |field| %>
        <%= render RowFieldComponent.new(field:, value_transformer: ->(genre_line) { helpers.link_to_mods_subject(genre_line) }) %>
      <% end %>
    </tbody>
  <% end %>
<% end %>
