<%= render SectionComponent.new(label: 'Access conditions') do %>
  <dl>
    <% if license_description.present? %>
      <dt>License</dt>
      <dd><%= license_description %></dd>
    <% end %>

    <% if copyright.present? %>
      <dt>Copyright</dt>
      <dd><%= copyright %></dd>
    <% end %>

    <% if use_and_reproduction.present? %>
      <dt>Use and Reproduction</dt>
      <dd><%= use_and_reproduction %></dd>
    <% end %>
  </dl>
<% end %>
