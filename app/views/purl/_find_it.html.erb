<% releases = [] %>

<% if document.released_to_searchworks? && !document.catalog_key %>
  <% releases << link_to("View in SearchWorks", Settings.searchworks.view_template_url % document.attributes, class: 'su-underline') %>
<% end %>
<% if document.released_to_earthworks? %>
  <% releases << link_to("View in EarthWorks", Settings.earthworks.view_template_url % document.attributes, class: 'su-underline') %>
<% end %>

<% if document.catalog_key || releases.present? %>
  <%= render SectionComponent.new(label: 'Also listed in') do %>
    <% if document.catalog_key %>
      <%= link_to 'View in SearchWorks', Settings.searchworks.view_template_url % { druid: document.catalog_key }, class: 'su-underline' %>
    <% end %>

    <%= releases.to_sentence.html_safe %>
  <% end %>
<% end %>
