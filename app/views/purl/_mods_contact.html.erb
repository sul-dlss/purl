<% if document.mods.contact.present? %>
  <div class="section">
    <div class="section-heading">
      <h2>Contact information</h2>
    </div>
    <div class="section-body">
      <dl>
        <% document.mods.contact.each do |contact| %>
          <%= mods_record_field(contact) %>
        <% end %>
      </dl>
    </div>
  </div>
<% end %>