<div id="rights-metadata">
  <dl>
    <%= print_field_value("use_and_reproduction_stmt", "Use and Reproduction", '', true).html_safe %>
    <%= add_copyright_symbol(print_field_value("copyright_stmt", "Copyright")) %>

	  <% if not(@purl.cclicense_symbol.nil? or @purl.cclicense_symbol.empty?) %>
      <dt>License:</dt>
      <dd>
      	<%= get_license_html('cc', @purl.cclicense_symbol, @purl.cclicensetype) %>
	    </dd>
		<% end %>


	  <% if not(@purl.odc_license.nil? or @purl.odc_license.empty?) %>
      <dt>License:</dt>
      <dd>
      	<%= get_license_html('odc', @purl.odc_license, @purl.odc_type) %>
	    </dd>
		<% end %>

  </dl>

</div>
